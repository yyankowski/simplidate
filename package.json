{
  "name": "simplidate",
  "version": "1.0.0",
  "description": "Simple date-time manipulation.",
  "main": "./src/index.ts",
  "scripts": {
    "clean": "rm -rf ./dist/*",
    "dist": "npm run compile && npm run minify && rm -rf ./tmp/*",
    "_tsc": "./node_modules/typescript/bin/tsc",
    "compile": "npm run clean && npm run _tsc",
    "test": "mocha -r ts-node/register ./test/index.spec.ts",
    "minify": "./node_modules/uglify-js/bin/uglifyjs ./tmp/*.js -o ./dist/simply.min.js --source-map --screw-ie8 -c -m"
  },
  "types": "./src/index.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yyankowski/simplidate.git"
  },
  "keywords": [
    "date",
    "datetime",
    "date-time"
  ],
  "author": "Yan Yankowski",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yyankowski/simplidate/issues"
  },
  "homepage": "https://github.com/yyankowski/simplidate#readme",
  "devDependencies": {
    "@types/chai": "4.1.2",
    "@types/mocha": "2.2.48",
    "chai": "4.1.2",
    "mocha": "5.0.0",
    "ts-node": "4.1.0",
    "typescript": "2.7.1",
    "uglify-js": "3.3.12"
  }
}
