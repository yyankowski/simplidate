{
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "declarationDir": "./dist",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "outDir": "./tmp",
    "target": "es5",
    "removeComments": true,
    "preserveConstEnums": true,
    "module": "commonjs",
    "sourceMap": false
  },
  "exclude": [
    "./tmp",
    "./test",
    "./dist",
    "./node_modules"
  ]
}